{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/servers/main/schemas/mcp-config.schema.json",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/runner/work/OBS-App/OBS-App"
      ],
      "description": "Access project files and directories"
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Access GitHub repositories, issues, and pull requests"
    },
    "npm": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-npm"
      ],
      "description": "Search and get information about npm packages"
    },
    "websearch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-web-search"
      ],
      "description": "Search the web for OBS WebSocket documentation and examples"
    }
  }
}
